{
  // TypeScript Configuration
  "typescript.tsdk": "frontend/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // Python Configuration
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.analysis.extraPaths": [
    "${workspaceFolder}/backend",
    "${workspaceFolder}/iot-sim",
    "${workspaceFolder}/edge-sim"
  ],
  "python.analysis.diagnosticMode": "workspace",
  "python.terminal.activateEnvironment": true,
  "python.envFile": "${workspaceFolder}/.env",
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/backend/.venv/lib/python3.11/site-packages",
    "${workspaceFolder}/backend",
    "${workspaceFolder}/iot-sim",
    "${workspaceFolder}/edge-sim"
  ],

  // Editor Formatting
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": false, // ✅ Deshabilitado hasta instalar black-formatter
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Markdown Configuration
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    }
  },
  "markdownlint.config": {
    "default": true,
    "MD003": {
      "style": "consistent"
    },
    "MD004": {
      "style": "consistent"
    },
    "MD007": {
      "indent": 2
    },
    "MD009": {
      "br_spaces": 2,
      "list_item_empty_lines": false
    },
    "MD013": {
      "line_length": 100,
      "heading_line_length": 100,
      "code_block_line_length": 100,
      "code_blocks": false,
      "tables": false
    },
    "MD026": {
      "punctuation": ".,;:!?。"
    },
    "MD029": {
      "style": "one_or_ordered"
    },
    "MD030": {
      "ul_single": 1,
      "ol_single": 1,
      "ul_multi": 1,
      "ol_multi": 1
    },
    "MD033": {
      "allowed_elements": ["br", "kbd", "details", "summary"]
    },
    "MD034": false,
    "MD036": false,
    "MD040": false,
    "MD041": false,
    "MD043": false,
    "MD044": {
      "names": [],
      "code_blocks": false
    },
    "MD046": {
      "style": "consistent"
    },
    "MD048": {
      "style": "consistent"
    }
  },

  // Performance Optimization
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true
  }
}
