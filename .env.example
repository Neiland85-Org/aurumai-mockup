# =============================================================================
# AURUMAI PLATFORM - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# 
# CRITICAL: This file is a TEMPLATE. DO NOT commit real secrets to git.
# 
# Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Update ALL values marked with <CHANGE_ME> or <REQUIRED>
# 3. Never commit .env to git (already in .gitignore)
# 
# Production deployment:
# - Use environment-specific files: .env.production, .env.staging
# - Consider using secrets management: AWS Secrets Manager, Vault, etc.
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
APP_NAME="AurumAI Platform"
APP_VERSION="0.1.0"

# Environment: development | staging | production
ENVIRONMENT=development

# Debug mode (MUST be False in production)
DEBUG=true

# Logging level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL + TimescaleDB)
# -----------------------------------------------------------------------------
# CRITICAL: Change these credentials in production!
DB_HOST=localhost
DB_PORT=5432
DB_USER=aurumai
DB_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
DB_NAME=aurumai

# TimescaleDB (for time-series data)
TSDB_HOST=localhost
TSDB_PORT=5432
TSDB_USER=aurumai
TSDB_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
TSDB_NAME=aurumai_timeseries

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# CRITICAL: Generate a strong random secret key for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=<REQUIRED_GENERATE_STRONG_SECRET>

# JWT token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# JWT algorithm
ALGORITHM=HS256

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -----------------------------------------------------------------------------
# JSON array format for allowed origins
# Example: ["http://localhost:3000","https://app.aurumai.com"]
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Allow credentials (cookies, authorization headers)
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# MQTT (IoT Communication)
# -----------------------------------------------------------------------------
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=aurumai
MQTT_PASSWORD=<CHANGE_ME_MQTT_PASSWORD>
MQTT_TOPIC_PREFIX=aurumai

# MQTT connection settings
MQTT_KEEPALIVE=60
MQTT_QOS=1

# -----------------------------------------------------------------------------
# OBSERVABILITY
# -----------------------------------------------------------------------------
# Enable OpenTelemetry distributed tracing
TRACING_ENABLED=false

# Jaeger endpoint (if tracing enabled)
JAEGER_ENDPOINT=http://localhost:4317

# Prometheus metrics endpoint
METRICS_ENABLED=true

# JSON structured logging
JSON_LOGS=true

# -----------------------------------------------------------------------------
# RESILIENCE & PERFORMANCE
# -----------------------------------------------------------------------------
# Circuit breaker settings
CIRCUIT_BREAKER_FAIL_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60

# Retry policy
RETRY_MAX_ATTEMPTS=3
RETRY_MIN_WAIT=1
RETRY_MAX_WAIT=10

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# ML/AI SETTINGS
# -----------------------------------------------------------------------------
# Model cache directory
MODEL_CACHE_DIR=./models/cache

# Anomaly detection threshold
ANOMALY_THRESHOLD=0.7

# Prediction confidence threshold
PREDICTION_MIN_CONFIDENCE=0.6

# -----------------------------------------------------------------------------
# EDGE/IOT SIMULATOR SETTINGS
# -----------------------------------------------------------------------------
# Backend API endpoint for simulators
BACKEND_API_URL=http://localhost:8000

# Simulator settings
IOT_BATCH_SIZE=100
IOT_BATCH_INTERVAL=5
EDGE_BUFFER_SIZE=1000

# -----------------------------------------------------------------------------
# FRONTEND SETTINGS (Next.js)
# -----------------------------------------------------------------------------
# Public API endpoint (accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Frontend port
FRONTEND_PORT=3000

# Enable analytics (optional)
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# -----------------------------------------------------------------------------
# DOCKER COMPOSE PRODUCTION SETTINGS
# -----------------------------------------------------------------------------
# Image version tag (for production deployments)
VERSION=latest

# Data persistence paths (for production bind mounts)
# These should be absolute paths on the host system
POSTGRES_DATA_PATH=./data/postgres
BACKEND_DATA_PATH=./data/backend

# Network configuration
NETWORK_SUBNET=172.28.0.0/16

# Edge simulator settings
EDGE_PORT=9000
EDGE_SYNC_INTERVAL=5

# IoT simulator settings
MACHINES=TRUCK-21,MILL-3,BOILER-7
SIM_INTERVAL_SECONDS=3
NORMAL_PHASE_CYCLES=50
DRIFT_PHASE_CYCLES=50

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
FEATURE_PREDICTIONS=true
FEATURE_ESG_TRACKING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_MONITORING=true

# -----------------------------------------------------------------------------
# DEVELOPMENT/TESTING (Safe to ignore in production)
# -----------------------------------------------------------------------------
# Test database (for pytest)
TEST_DB_URL=postgresql://aurumai:test@localhost:5432/aurumai_test

# Seed data on startup (development only)
SEED_DATABASE=false
