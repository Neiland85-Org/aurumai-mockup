# Application
APP_NAME="AurumAI Platform"
APP_VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=True
# Logging
LOG_LEVEL=INFO

# ============================================
# Security Settings
# ============================================
# Generate a strong SECRET_KEY with:
#   python3 ../tools/generate_secrets.py --env production
# CRITICAL: Use a unique, cryptographically secure key in production (32+ chars)
# NEVER commit actual secrets to git - this is just an example
SECRET_KEY=your-secret-key-here-CHANGE-IN-PRODUCTION

# API
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=aurumai
DB_PASSWORD=aurumai_dev_password
DB_NAME=aurumai

# TimescaleDB
TSDB_HOST=localhost
TSDB_PORT=5432
TSDB_USER=aurumai
TSDB_PASSWORD=aurumai_dev_password
TSDB_NAME=aurumai_timeseries

# MQTT
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=aurumai
MQTT_PASSWORD=aurumai_mqtt
MQTT_TOPIC_PREFIX=aurumai

# Security
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True