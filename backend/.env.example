# AurumAI Backend Configuration Example
# Copy this file to .env and adjust values

# Application
APP_NAME=AurumAI Platform
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=aurumai
DB_PASSWORD=aurumai_dev_password
DB_NAME=aurumai
DB_ECHO=false

# TimescaleDB (Time Series)
TSDB_HOST=localhost
TSDB_PORT=5432
TSDB_USER=aurumai
TSDB_PASSWORD=aurumai_dev_password
TSDB_NAME=aurumai_timeseries

# MQTT
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=aurumai
MQTT_PASSWORD=aurumai_mqtt
MQTT_TOPIC_PREFIX=aurumai

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Multi-tenant
DEFAULT_REGION=EU
ENABLE_MULTI_REGION=true

# ESG Configuration
ESG_DEFAULT_FACTOR_SOURCE=IPCC_2019
ESG_CALCULATION_METHOD=direct

# ML Models
ML_MODELS_PATH=./models
ML_INFERENCE_ENABLED=true
ML_MODEL_VERSION=v1.0.0

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Feature Flags
FEATURE_PREDICTIVE=true
FEATURE_CARBON=true
FEATURE_ENERGY=true
FEATURE_WATER=false
FEATURE_ANALYTICS=true
